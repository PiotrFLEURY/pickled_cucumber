{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate sources",
      "type": "shell",
      "command": "dart run build_runner build --delete-conflicting-outputs",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/flutter_example"
      }
    },
    {
      "label": "upgrade flutter major dependencies",
      "type": "shell",
      "command": "flutter pub upgrade --major-versions",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/flutter_example"
      }
    },
    {
      "label": "Run Dart tests",
      "type": "shell",
      "command": "dart test",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/example"
      }
    },
    {
      "label": "Run Dart Frog tests",
      "type": "shell",
      "command": "dart test",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/dart_frog_example"
      }
    },
    {
      "label": "Run Flutter tests",
      "type": "shell",
      "command": "flutter test",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/flutter_example"
      }
    },
    {
      "label": "Run Flutter integration tests",
      "type": "shell",
      "command": "flutter test integration_test/app_test.dart",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/flutter_example"
      }
    }
  ]
}
